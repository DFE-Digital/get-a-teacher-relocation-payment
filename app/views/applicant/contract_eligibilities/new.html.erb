<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= form_with(model: @contract_eligibility, local: true) do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_radio_buttons_fieldset(:contract_type, legend: { text: "What type of contract are you currently employed on?", tag: "h1", size: "l" }) do %>
        <%= f.govuk_radio_button :contract_type, :permanent, label: { text: "Permanent" }, link_errors: true %>
        <%= f.govuk_radio_button :contract_type, :fixed_term, label: { text: "Fixed term" } %>
        <%= f.govuk_radio_button :contract_type, :other, label: { text: "Other" } %>
      <% end %>
      
      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>