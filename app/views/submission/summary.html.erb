<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-l">
      <%= t("applicants.application_summary.title") %>
    </h1>

    <%= form_with(model: @summary, url: new_submission_path, local: true) do |f| %>
      <%= f.govuk_error_summary link_base_errors_to: :email_address %>

      <%= govuk_summary_list(rows: @summary.rows) %>
      <%= govuk_summary_list(
          card: @summary.personal_card { link_to(_1, _2) },
          rows: @summary.personal_rows
          ) %>
      <%= govuk_summary_list(
          card: @summary.employment_card { link_to(_1, _2) },
          rows: @summary.employment_rows
          ) %>
 
        <%= f.govuk_submit "Submit Application" %>
    <% end %>
  </div>
</div>
