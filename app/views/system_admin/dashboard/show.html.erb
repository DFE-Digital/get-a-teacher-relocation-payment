<h1>Dashboard</h1>

<div class="dashboard">
  <div class="kpi-widget">
    <h3 class="title">Total Applications</h3>
    <p class="value"><%= @kpi_stats.total_applications %></p>
  </div>
  <div class="kpi-widget">
    <h3 class="title">Aprovals</h3>
    <p class="value"><%= @kpi_stats.total_approvals %></p>
  </div>
  <div class="kpi-widget">
    <h3 class="title">Rejections</h3>
    <p class="value"><%= @kpi_stats.total_rejections %></p>
  </div>
  <div class="kpi-widget">
    <h3 class="title">Time to Payment</h3>
    <p class="value"><%= duration_in_words(@kpi_stats.time_to_payment) %></p>
  </div>
  <div class="kpi-widget">
    <h3 class="title">Time to Approval</h3>
    <p class="value"><%= duration_in_words(@kpi_stats.time_to_approval) %></p>
  </div>
  <div class="kpi-widget">
    <h3 class="title">Nationality</h3>
    <table class="kpi-table">
      <% @kpi_stats.nationality_breakdown.each do |k,v|%>
        <tr>
          <td><%= k %></td>
          <td><%= v %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="kpi-widget">
    <h3 class="title">Gender</h3>
    <table class="kpi-table">
      <% @kpi_stats.gender_breakdown.each do |k,v|%>
        <tr>
          <td><%= k %></td>
          <td><%= v %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="kpi-widget">
    <h3 class="title">Age</h3>
    <table class="kpi-table">
      <% @kpi_stats.age_breakdown.each do |k,v|%>
        <tr>
          <td><%= k %></td>
          <td><%= v %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="kpi-widget">
    <h3 class="title">Visa</h3>
    <table class="kpi-table">
      <% @kpi_stats.visa_breakdown.each do |k,v|%>
        <tr>
          <td><%= k %></td>
          <td><%= v %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="kpi-widget">
    <h3 class="title">Route</h3>
    <table class="kpi-table">
      <% @kpi_stats.route_breakdown.each do |k,v|%>
        <tr>
          <td><%= k %></td>
          <td><%= v %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="kpi-widget">
    <h3 class="title">Subject</h3>
    <table class="kpi-table">
      <% @kpi_stats.subject_breakdown.each do |k,v|%>
        <tr>
          <td><%= k %></td>
          <td><%= v %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
