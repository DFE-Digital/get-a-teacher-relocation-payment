<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= form_with(model: @contract_eligibility, local: true) do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_radio_buttons_fieldset(:contract_type, legend: { text: "What type of contract are you currently employed on?", tag: "h1", size: "l" }) do %>
        <% Applicants::ContractEligibility::CONTRACT_TYPE_OPTIONS.each_with_index do |value, i| %>
          <%= f.govuk_radio_button :contract_type, value, label: { text: value.humanize }, link_errors: i.zero? %>
        <% end %>
      <% end %>
      
      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>