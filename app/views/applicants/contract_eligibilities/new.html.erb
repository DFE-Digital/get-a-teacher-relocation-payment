<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= form_with(model: @contract_eligibility, local: true) do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_radio_buttons_fieldset(
        :one_year_contract,
        legend: { text: "Are you employed on a contract lasting at least one academic year?", tag: "h1", size: "l" },
        hint: { text: "Help text can go here. Description of the criteria" }) do %>
        <% Applicants::ContractEligibility::ONE_YEAR_CONTRACT_OPTIONS.each_with_index do |value, i| %>
          <%= f.govuk_radio_button :one_year_contract, value, label: { text: value.humanize }, link_errors: i.zero? %>
        <% end %>
      <% end %>
      
      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>