<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= form_with(model: @personal_detail, local: true) do |f| %>

      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-l">
        Personal details
      </h1>

      <%= f.govuk_text_field :given_name, label: { text: "Given name", size: "s" }, hint: { text: "Please enter your given name(s) – as it appears on your passport" } %>
      <%= f.govuk_text_field :family_name, label: { text: "Family name", size: "s" }, hint: { text: "Please enter your family name(s) – as it appears on your passport" } %>
      <%= f.govuk_text_field :email_address, label: { text: "Email address", size: "s" } %>
      <%= f.govuk_text_field :phone_number, label: { text: "Phone number", size: "s" } %>
      <%= f.govuk_date_field :date_of_birth, date_of_birth: true, legend: { text: "Date of birth", size: "s" } %>

      <%= f.govuk_radio_buttons_fieldset(:sex, legend: { text: "Sex", size: "s" }) do %>
        <% Applicants::PersonalDetail::SEX_OPTIONS.each_with_index do |value, i| %>
          <%= f.govuk_radio_button :sex, value, label: { text: value.humanize }, link_errors: i.zero? %>
        <% end %>
      <% end %>

      <%= f.govuk_text_field :passport_number, label: { text: "Passport number  ", size: "s" }, hint: { text: "Please enter your passport number – as it appears on your passport" } %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>