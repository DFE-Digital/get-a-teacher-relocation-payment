<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= form_with(model: @school_eligibility, local: true) do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_radio_buttons_fieldset(:state_funded_secondary_school, legend: { text: "Are you currently employed by an English state-funded secondary school?", tag: "h1", size: "l" }) do %>
        <%= f.govuk_radio_button :state_funded_secondary_school, :true, label: { text: "Yes" }, link_errors: true %>
        <%= f.govuk_radio_button :state_funded_secondary_school, :false, label: { text: "No" } %>
      <% end %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
