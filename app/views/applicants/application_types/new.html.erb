<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= form_with(model: @application_type, local: true) do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_radio_buttons_fieldset(:application_type, legend: { text: "Are you currently a teacher or a salaried trainee?", tag: "h1", size: "l" }) do %>
        <% Applicants::ApplicationType::APPLICATION_TYPE_OPTIONS.each_with_index do |value, i| %>
          <%= f.govuk_radio_button :application_type, value, label: { text: value.humanize }, link_errors: i.zero? %>
        <% end %>
      <% end %>
      
      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>