{
    "image": "mcr.microsoft.com/devcontainers/ruby:3.1.3",
    "features": {
        "ghcr.io/itsmechlark/features/postgresql:1": {},
    },
    "postStartCommand": {
        "dependencies": "bundle install",
        "nodejs": "yarn install",
        "migration": "bin/rails db:migrate"
    },
    "postAttachCommand": {
        "server": "bin/rails server",
        "webpack": "bin/webpack-dev-server"
    },
    "portsAttributes": {"3000": {"label": "Application port"}},
    "customizations": {
        "vscode": {
            "extensions": [
                "rebornix.Ruby",
                "groksrc.ruby",
                "misogi.ruby-rubocop",
                "esbenp.prettier-vscode"
            ]
        }
    }
}
